background yes
update_interval 1

cpu_avg_samples 1
net_avg_samples 2
temperature_unit celsius

double_buffer yes
no_buffers yes
text_buffer_size 2048

gap_x 33
gap_y 70
minimum_size 900 900
maximum_width 350
own_window yes
own_window_type override
own_window_transparent yes
own_window_argb_visual yes
own_window_type normal
own_window_class conky-semi
own_window_hints undecorate,sticky,skip_taskbar,skip_pager,below
border_inner_margin 0
border_outer_margin 0
alignment tr


draw_shades no
draw_outline no
draw_borders no
draw_graph_borders no

override_utf8_locale yes
use_xft yes
xftfont Future:size=4
xftalpha 0.5
uppercase no

# Defining colors
default_color 000000
# Shades of Gray
color1 010101
color2 333333
color3 505050
# Orange EF5A29
color4 FF0000
# Green
color5 77B753

# Loading lua script for drawning rings
lua_load ~/.conky/seamod_rings.lua
lua_draw_hook_post main

## System information using conky capabilities

# Header with base system info
TEXT
${font Future:size=10,weight:bold}${color4} ${hr 2}
${offset 15}${font Future:size=10,weight:normal}${color1}$sysname $kernel${alignr}$nodename
${offset 15}${font Future:size=10,weight:normal}${color1}Uptime: $uptime${alignr}${battery} ${battery_time}
${offset 15}${font Future:size=10,weight:normal}${color1}Mem  ${mem}/${memmax}${alignr}Swap ${swap}/${swapmax}
#${offset 15}${font Future:size=10,weight:normal}${color 49a835}${swapbar 10,60}
#${offset 95}${image ~/.conky/che_2.png -p 1,5 -s  92x92}

# Showing CPU Graph
${voffset 10}
${offset 120}${cpugraph 40,183 666666 666666}${voffset -25}
${offset 110}${font Future:size=10,weight:bold}${color5}C  P  U ${font Future:size=10,weight:normal}${color1}${alignr}$freq_g${color1}GHz
# Showing TOP 5 CPU-consumers
${offset 105}${font Future:size=10,weight:normal}${color4}${top name 1}${alignr}${top cpu 1}%
${offset 105}${font Future:size=10,weight:normal}${color1}${top name 2}${alignr}${top cpu 2}%
${offset 105}${font Future:size=10,weight:normal}${color2}${top name 3}${alignr}${top cpu 3}%
${offset 105}${font Future:size=10,weight:normal}${color3}${top name 4}${alignr}${top cpu 4}%
${offset 105}${font Future:size=10,weight:normal}${color3}${top name 5}${alignr}${top cpu 5}%

#Showing memory part with TOP 5
${voffset 50}
${offset 138}${font Future:size=10,weight:bold}${color5}MEM
${offset 105}${font Future:size=10,weight:normal}${color4}${top_mem name 1}${alignr}${top_mem mem 1}%
${offset 105}${font Future:size=10,weight:normal}${color1}${top_mem name 2}${alignr}${top_mem mem 2}%
${offset 105}${font Future:size=10,weight:normal}${color2}${top_mem name 3}${alignr}${top_mem mem 3}%
${offset 105}${font Future:size=10,weight:normal}${color3}${top_mem name 4}${alignr}${top_mem mem 4}%
${offset 105}${font Future:size=10,weight:normal}${color3}${top_mem name 4}${alignr}${top_mem mem 5}%

# Showing disk partitions: root and home
${voffset 13}
${offset 85}${font Future:size=10,weight:bold}${color5}DISKS ${font Future:size=9,weight:bold}${color1}root_${fs_free /}${alignr}home_${fs_free /home}
${offset 120}${diskiograph 33,183 666666 666666}${voffset -30}
${voffset 30}
${offset 15}${alignr}${font WenQuanYi Zen Hei:size=10,weight:bold}
#${execi 15 python getLocation.py}
${offset 15}${font Future:size=9,weight:bold}${color1}wlp2s0: ${font Ubuntu:size=9,weight:normal}${addr wlp2s0}${font Ubuntu:size=9,weight:bold}

# Network data ${alignr}
# ${voffset 0}
#http://1111.ip138.com/ic.asp  http://checkip.dyndns.org/
${offset 15}${font Future:size=10,weight:bold}${color5}Net${color1}
